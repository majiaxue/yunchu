<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_20"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/bottom_img"
            android:layout_width="@dimen/dp_169"
            android:layout_height="@dimen/dp_148"
            app:roundBottomLeft="false"
            app:roundBottomRight="false"
            app:roundTopLeft="true"
            app:roundTopRight="true"
            app:roundedCornerRadius="@dimen/dp_5" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_zhangguilibao"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/bottom_name"
        android:layout_width="@dimen/dp_169"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginBottom="@dimen/dp_11"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="法国HR赫莲娜专业线小..."
        android:textColor="#e9ca6f"
        android:textSize="@dimen/sp_13" />

    <LinearLayout
        android:layout_width="@dimen/dp_169"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bottom_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="￥399.00"
            android:textColor="#e9ca6f"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_1"
            android:layout_weight="1" />

        <TextView
            android:layout_width="@dimen/dp_47"
            android:layout_height="@dimen/dp_17"
            android:background="@drawable/bg_5_e9ca6f_radius"
            android:gravity="center"
            android:text="免费领"
            android:textColor="#644b00"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

</LinearLayout>