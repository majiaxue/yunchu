<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.user_manager_center.qrcode.QRCodeActivity">

    <include layout="@layout/page_top" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/qr_code_user_icon"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_72"
        android:layout_marginTop="@dimen/dp_56"
        app:roundAsCircle="true" />

    <TextView
        android:id="@+id/qr_code_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="苏东坡"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/qr_code_user_invitation_code"
        android:layout_width="@dimen/dp_121"
        android:layout_height="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/bg_5_e5cd9a"
        android:gravity="center"
        android:text="邀请码：123456"
        android:textColor="#333333"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:layout_width="@dimen/dp_208"
        android:layout_height="@dimen/dp_208"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/bg_15_border"
        android:gravity="center">

        <ImageView
            android:id="@+id/qr_code_img"
            android:layout_width="@dimen/dp_161"
            android:layout_height="@dimen/dp_161" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_26"
        android:text="好友扫描二维码，即可建立邀请关系"
        android:textColor="#333333"
        android:textSize="@dimen/sp_12" />

</LinearLayout>
