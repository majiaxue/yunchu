<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
    <TextView
        android:id="@+id/user_home_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:background="@drawable/bg_yun_home_sou"
        android:drawableLeft="@drawable/search"
        android:drawablePadding="@dimen/dp_13"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:text="请输入要搜索的商品名称"
        android:textColor="#666666"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_12" />
    <com.stx.xhb.xbanner.XBanner
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_161"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"/>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_11"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
     <LinearLayout
         android:gravity="center"
         android:layout_weight="1"
         android:layout_width="wrap_content"
         android:orientation="horizontal"
         android:layout_height="wrap_content">
         <ImageView
             android:layout_width="@dimen/dp_11"
             android:layout_height="@dimen/dp_11"
             android:src="@drawable/dui"/>
         <TextView
             android:layout_marginLeft="@dimen/dp_8"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="免费配送"/>
     </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_11"
                android:src="@drawable/dui"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最快30分钟"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_11"
                android:src="@drawable/dui"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无理由发货"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_2"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_25"
            android:background="@drawable/bg_left_radius"/>
        <LinearLayout
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:background="@drawable/bg_gonggao">
            <com.example.view.MarqueeView
                android:layout_gravity="center"
                android:id="@+id/home_marquee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_weight="1"
                app:animDuration="1000"
                app:interval="5000"
                app:isSetAlphaAnim="true" />
        </LinearLayout>
    </LinearLayout>



    </LinearLayout>
</ScrollView>