<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/re_yunchu_butie"
    android:layout_below="@id/yunchu_img"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_13"
        android:background="#f5f5f5"/>
    <LinearLayout
        android:id="@+id/ll1"
        android:orientation="horizontal"
        android:layout_below="@id/v1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_pingtai"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平台补贴区"/>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_230"
                android:layout_alignParentRight="true"
                android:background="#f5f5f5" />
            <ImageView
                android:layout_width="@dimen/dp_23"
                android:layout_height="@dimen/dp_42"
                android:layout_alignParentRight="true"
                android:src="@drawable/rexiao"/>
            <TextView
                android:id="@+id/tv_tuijiantehui"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#dfdfdf"
                android:text="店长今日推荐特惠"
                android:layout_below="@id/tv_pingtai"
                android:textSize="@dimen/sp_10"/>
            <ImageView
                android:id="@+id/img_shucai"
                android:layout_width="@dimen/dp_137"
                android:layout_height="@dimen/dp_99"
                android:src="@drawable/shucai"
                android:layout_below="@id/tv_tuijiantehui"
                android:layout_marginTop="@dimen/dp_10"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_36"
                android:layout_width="@dimen/dp_53"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="@dimen/dp_52"
                android:src="@drawable/yuan"/>
            <TextView
                android:id="@+id/price"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_55"
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/dp_27"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"
                android:text="￥10.0" />
            <TextView
                android:layout_below="@id/img_shucai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新鲜蔬菜 低级购买"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/food"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正宗广东公鸡"
                android:textSize="@dimen/sp_12"
                android:textColor="#333333"/>
            <TextView
                android:id="@+id/youshi"
                android:layout_below="@id/food"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_6"
                android:text="鲜活现杀"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/xianliang"
                android:gravity="center"
                android:layout_below="@id/youshi"
                android:layout_width="@dimen/dp_87"
                android:layout_height="@dimen/dp_19"
                android:text="限量2000份"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/white"
                android:background="@drawable/bg_xianliang"
                android:layout_marginTop="@dimen/dp_32"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <ImageView
                android:id="@+id/ji_photo"
                android:layout_width="@dimen/dp_83"
                android:layout_height="@dimen/dp_73"
                android:layout_alignParentRight="true"
                android:src="@drawable/ji"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_7"/>
            <View
                android:id="@+id/v2"
                android:layout_below="@id/xianliang"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#f4f4f4"/>
            <TextView
                android:id="@+id/shucai"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="#333333"
                android:layout_below="@id/v2"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有机西红柿"
                />
            <TextView
                android:id="@+id/youji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shucai"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_6"
                android:textSize="@dimen/sp_12"
                android:textColor="#999999"
                android:text="有机认证"/>
            <TextView
                android:layout_below="@id/youji"
                android:layout_width="@dimen/dp_87"
                android:layout_height="@dimen/dp_19"
                android:text="秒杀6元/200克"
                android:background="@drawable/miaosha"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_11"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <ImageView
                android:layout_width="@dimen/dp_89"
                android:layout_height="@dimen/dp_68"
                android:layout_alignParentRight="true"
                android:layout_below="@id/v2"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/xihongshi"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/ll1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_13"
            android:background="#f5f5f5"/>
        <android.support.design.widget.TabLayout
            android:id="@+id/tab"
            app:tabMode="scrollable"
            app:tabIndicatorColor="#07bd44"
            app:tabSelectedTextColor="#07bd44"
            app:tabTextColor="#333333"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            />
        <android.support.v4.view.ViewPager
            android:background="#f5f5f5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/yunchu_vp"/>

    </LinearLayout>


</RelativeLayout>
