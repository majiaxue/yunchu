<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv_commend_parent"
    android:layout_width="@dimen/dp_167"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/rv_commend_img"
        android:layout_width="@dimen/dp_167"
        android:layout_height="@dimen/dp_173"
        app:roundBottomLeft="false"
        app:roundBottomRight="false"
        app:roundedCornerRadius="@dimen/dp_5" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/huodongbao"
        android:layout_width="@dimen/dp_58"
        android:layout_height="@dimen/dp_62"
        android:background="@drawable/fanli" />

    <TextView
        android:id="@+id/rv_commend_name"
        android:layout_width="@dimen/dp_144"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_commend_img"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_commend_name"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_19"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rv_commend_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="￥30.00"
            android:textColor="#fd3c15"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/rv_commend_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="124435人付款"
            android:textColor="#999999"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>

    <TextView
        android:id="@+id/rv_commend_predict"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_17"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_5_fd3c15"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_3"
        android:paddingRight="@dimen/dp_3"
        android:text="预估赚￥0.00"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_11"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_19"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/rv_commend_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="古田兔旗舰店"
            android:textColor="#fd3c15"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/rv_commend_btn"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_15"
            android:background="@drawable/bg_5_fb4_feb"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="进店"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>
</RelativeLayout>
