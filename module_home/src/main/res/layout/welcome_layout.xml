<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_230"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/bg_white"
    android:id="@+id/ll"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:gravity="center"
        android:id="@+id/tv"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="服务协议和隐私政策"
        android:textSize="@dimen/sp_15"
        android:textColor="#999999"/>
    <TextView
        android:id="@+id/content"
        android:lineHeight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请你务必申慎阅读。充分理解服务协议和隐私政策各条款，包括但不限于:为了向你提供即时通讯，内容分享等服务。我们需要收集你的设备信息。操作日志等个人信息。你可以在设置中查看,变更，删除个人信息并管理你的授权。"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:lineHeight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:text="你可阅读"
            />
            <TextView
                android:lineHeight="@dimen/dp_20"
                android:id="@+id/fuwuxieyi"
                android:textColor="#fa6a13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《服务协议》"/>
            <TextView
                android:lineHeight="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="和"/>
            <TextView
                android:lineHeight="@dimen/dp_20"
                android:id="@+id/yinsi"
                android:textColor="#fa6a13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《隐私政策》"/>

        </LinearLayout>
        <TextView
            android:lineHeight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="了解详细信息。如你同意，请点击“同意开始接受我们的服务。"/>
    <View
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/no"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="暂不使用"/>
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/agree"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="同意"
            android:textColor="#fa6a13"/>
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>