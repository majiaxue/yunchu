<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context="com.example.manager_order_details.ManagerOrderDetailsActivity">

    <include layout="@layout/page_top" />

    <android.support.design.widget.TabLayout
        android:id="@+id/manager_order_details_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="#fff"
        app:tabBackground="@color/colorTransparency"
        app:tabIndicatorColor="#fd3c15"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorGravity="bottom"
        app:tabIndicatorHeight="@dimen/dp_2"
        app:tabMode="fixed"
        app:tabPaddingEnd="@dimen/dp_15"
        app:tabPaddingStart="@dimen/dp_15"
        app:tabRippleColor="@color/colorTransparency"
        app:tabTextColor="#333333" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/manager_order_details_rec"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:overScrollMode="never"></android.support.v7.widget.RecyclerView>

</LinearLayout>
