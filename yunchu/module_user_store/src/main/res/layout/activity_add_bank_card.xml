<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.add_bank_card.AddBankCardActivity">

    <include layout="@layout/page_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="姓         名："
            android:textColor="#333333"
            android:textSize="@dimen/sp_13" />

        <EditText
            android:id="@+id/add_bank_card_nick_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入真实姓名"
            android:textColor="#999999"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_13" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="身份证号："
            android:textColor="#333333"
            android:textSize="@dimen/sp_13" />

        <EditText
            android:id="@+id/add_bank_card_identity_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:digits="0123456789xX"
            android:maxLength="18"
            android:gravity="center_vertical"
            android:hint="请输入身份证号"
            android:inputType="number"
            android:textColor="#999999"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_13" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="银行卡号："
            android:textColor="#333333"
            android:textSize="@dimen/sp_13" />

        <EditText
            android:id="@+id/add_bank_card_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:digits="0123456789"
            android:gravity="center_vertical"
            android:hint="请输入完整的银行卡号"
            android:maxLength="19"
            android:inputType="number"
            android:textColor="#999999"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_13" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="开户支行："
            android:textColor="#333333"
            android:textSize="@dimen/sp_13" />

        <EditText
            android:id="@+id/add_bank_card_bank_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:editable="false"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="银行名称和支行名称"
            android:lines="1"
            android:textColor="#999999"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_13" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="手机号："
            android:textColor="#333333"
            android:textSize="@dimen/sp_13" />

        <EditText
            android:id="@+id/add_bank_card_input_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:digits="0123456789"
            android:gravity="center_vertical"
            android:hint="请输入银行预留的手机号码"
            android:inputType="number"
            android:phoneNumber="true"
            android:maxLength="11"
            android:textColor="#999999"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_13" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#eeeeee" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#eeeeee" />

    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/add_bank_card_affirm"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_105"
        android:background="@drawable/bg_jianbian_20_fd815b_fd4b45"
        android:gravity="center"
        android:text="确认"
        android:textColor="#fff"
        android:textSize="@dimen/sp_14" />

</LinearLayout>
