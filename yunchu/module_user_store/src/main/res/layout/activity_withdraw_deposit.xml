<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.withdrawdeposit.WithdrawDepositActivity">

    <include layout="@layout/page_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现金额"
            android:textColor="#0c0c0c"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/withdraw_deposit_money"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="您当前可提现0.33元"
            android:inputType="number"
            android:textColor="#80999999"
            android:textColorHint="#80999999"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现至"
            android:textColor="#0c0c0c"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/icon_zhifubao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:text="支付宝"
            android:textColor="#999999"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <View
        android:id="@+id/withdraw_deposit_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#eeeeee" />

    <LinearLayout
        android:id="@+id/withdraw_deposit_linear_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="#0c0c0c"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/withdraw_deposit_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="请填写您的真实姓名"
            android:textColor="#80999999"
            android:textColorHint="#80999999"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#eeeeee" />

    <LinearLayout
        android:id="@+id/withdraw_deposit_zhifubao"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:textColor="#0c0c0c"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/withdraw_deposit_alipay_account"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="请输入支付宝账号"
            android:textColor="#80999999"
            android:textColorHint="#80999999"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#eeeeee" />

    <TextView
        android:id="@+id/withdraw_deposit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:text="每周一至周五开放提现功能，休息日顺延"
        android:textColor="#333333"
        android:textSize="@dimen/sp_11" />

    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/confirm_withdrawal"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_60"
        android:background="@drawable/bg_jianbian_20_fd815b_fd4b45"
        android:gravity="center"
        android:text="确认提现"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_14" />

</LinearLayout>
