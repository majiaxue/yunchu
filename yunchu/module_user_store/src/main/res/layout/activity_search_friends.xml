<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.search_friends.SearchFriendsActivity">

    <include layout="@layout/include_status" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">

        <EditText
            android:id="@+id/search_friends_edit"
            android:layout_width="@dimen/dp_294"
            android:layout_height="@dimen/dp_26"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@drawable/bg_edit_26_eeeeee"
            android:drawableLeft="@drawable/icon_fangdajing"
            android:drawablePadding="@dimen/dp_14"
            android:hint="输入粉丝手机号"
            android:paddingLeft="@dimen/dp_12"
            android:textColor="#999999"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/search_friends_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            android:text="取消"
            android:textColor="#666666"
            android:textSize="@dimen/sp_18" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_friends_rec"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
