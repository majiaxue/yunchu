<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_jianbian_sign"
    android:orientation="vertical"
    tools:context="com.example.punchsign.PunchSignActivity">

    <include layout="@layout/include_status" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">

        <ImageView
            android:id="@+id/punch_sign_back"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_37"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            android:src="@drawable/icon_fanhui_bai" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="每日签到"
            android:textColor="#fdfdff"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/punch_sign_my_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:padding="@dimen/dp_5"
            android:text="我的积分"
            android:textColor="#fdfdff"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:src="@drawable/text_qiandaowenzi" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/punch_sign_shuye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_50"
            android:src="@drawable/img_shuye" />

        <LinearLayout
            android:layout_width="@dimen/dp_345"
            android:layout_height="@dimen/dp_360"
            android:layout_below="@id/punch_sign_shuye"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_m_12"
            android:background="@drawable/bg_10_fff"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:includeFontPadding="false"
                android:text="已连续签到"
                android:textColor="#777777"
                android:textSize="@dimen/sp_15" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_111"
                android:layout_marginTop="@dimen/dp_14"
                android:background="@drawable/img_qiandoaxianshi">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dp_17"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/punch_sign_consecutive_sign_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="2"
                        android:textColor="#ff533a"
                        android:textSize="@dimen/sp_30" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="天"
                        android:textColor="#ff533a"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>
            </RelativeLayout>

            <com.example.utils.StepsView
                android:id="@+id/punch_sign_steps_view"
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_80"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10" />

            <TextView
                android:id="@+id/punch_sign_sign_in_immediately"
                android:layout_width="@dimen/dp_244"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_22_jianbian"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="立即签到"
                android:textColor="#ffffff"
                android:textSize="@dimen/dp_17" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@drawable/img_jifendizuo"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/punch_sign_integral_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:includeFontPadding="false"
                android:text="612"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_22" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:includeFontPadding="false"
                android:text="我的积分"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
