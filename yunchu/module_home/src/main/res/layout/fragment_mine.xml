<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mine_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:overScrollMode="never">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F4F4"
        android:clipChildren="false"
        android:clipToPadding="false">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/hgfghf" />

        <include
            android:id="@+id/mine_status"
            layout="@layout/include_status" />

        <ImageView
            android:id="@+id/mine_setting"
            android:layout_width="@dimen/dp_41"
            android:layout_height="@dimen/dp_41"
            android:layout_below="@id/mine_status"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            android:src="@drawable/shezhi" />

        <RelativeLayout
            android:id="@+id/mine_rela"
            android:layout_width="@dimen/dp_345"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_status"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_45"
            android:background="@drawable/bg_10_fff"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_79"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_m_35"
                android:src="@drawable/header_di" />

            <ImageView
                android:id="@+id/mine_header"
                android:layout_width="@dimen/dp_66"
                android:layout_height="@dimen/dp_65"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_m_27"
                android:scaleType="fitXY"
                android:src="@drawable/vhjfg" />

            <TextView
                android:id="@+id/mine_lv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_alignLeft="@id/mine_header"
                android:layout_marginLeft="@dimen/dp_41"
                android:layout_marginTop="@dimen/dp_18"
                android:background="@drawable/bg_10_fb4619_border"
                android:drawableLeft="@drawable/icon_huiyuanbiao"
                android:drawablePadding="@dimen/dp_3"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:src="@drawable/lv_jin"
                android:text="金牌"
                android:textColor="#fb4619"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />

            <TextView
                android:id="@+id/mine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_51"
                android:includeFontPadding="false"
                android:text="请注册/登录"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:id="@+id/mine_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mine_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/mine_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/mine_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/bg_copy"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_3"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_3"
                    android:text="复制"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_11" />
            </LinearLayout>

            <TextView
                android:id="@+id/mine_iwantup"
                android:layout_width="@dimen/dp_68"
                android:layout_height="@dimen/dp_22"
                android:layout_below="@id/mine_temp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_5_fe6_ff3"
                android:gravity="center"
                android:text="我要升级"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />

            <View
                android:id="@+id/mine_temp2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@id/mine_iwantup"
                android:layout_marginTop="@dimen/dp_15"
                android:background="#eeeeee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_74"
                android:layout_below="@id/mine_temp2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mine_benri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="0元"
                        android:textColor="@color/codeText"
                        android:textSize="@dimen/sp_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:includeFontPadding="false"
                        android:text="本月预估"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:background="#eeeeee" />

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mine_benyue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="0元"
                        android:textColor="@color/codeText"
                        android:textSize="@dimen/sp_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:includeFontPadding="false"
                        android:text="本月结算"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:background="#eeeeee" />

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mine_shangyue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="0元"
                        android:textColor="@color/codeText"
                        android:textSize="@dimen/sp_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:includeFontPadding="false"
                        android:text="上月结算"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/mine_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_rela"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/mine_balance"
                android:layout_width="@dimen/dp_168"
                android:layout_height="@dimen/dp_81"
                android:background="@drawable/bg_5_fec_fd8"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_27"
                        android:layout_height="@dimen/dp_27"
                        android:layout_marginTop="@dimen/dp_17"
                        android:src="@drawable/icon_yue1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_11"
                        android:text="我的余额(元)"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mine_my_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_19"
                        android:includeFontPadding="false"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_24" />

                    <TextView
                        android:layout_width="@dimen/dp_67"
                        android:layout_height="@dimen/dp_18"
                        android:layout_marginTop="@dimen/dp_7"
                        android:background="@drawable/bg_9_fff_border"
                        android:gravity="center"
                        android:text="查看详情"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/mine_points"
                android:layout_width="@dimen/dp_168"
                android:layout_height="@dimen/dp_81"
                android:background="@drawable/bg_5_869_508"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_27"
                        android:layout_height="@dimen/dp_27"
                        android:layout_marginTop="@dimen/dp_17"
                        android:src="@drawable/icon_jifen1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_11"
                        android:text="我的积分(个)"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mine_my_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_19"
                        android:includeFontPadding="false"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_24" />

                    <TextView
                        android:layout_width="@dimen/dp_67"
                        android:layout_height="@dimen/dp_18"
                        android:layout_marginTop="@dimen/dp_7"
                        android:background="@drawable/bg_9_fff_border"
                        android:gravity="center"
                        android:text="查看详情"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mine_linea"
            android:layout_width="@dimen/dp_345"
            android:layout_height="@dimen/dp_105"
            android:layout_below="@id/mine_linear"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_10_fff"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_23"
                android:layout_marginTop="@dimen/dp_11"
                android:includeFontPadding="false"
                android:text="@string/my_order"
                android:textColor="#999999"
                android:textSize="@dimen/sp_13" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_9"
                android:background="#eeeeee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_10_fff"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/mine_all_order"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_19"
                        android:src="@drawable/my_order" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="@string/all_order"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_yifukuan"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_17"
                        android:layout_height="@dimen/dp_18"
                        android:src="@drawable/fukuan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="@string/yifukuan"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_yijiesuan"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:src="@drawable/jiesuan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="@string/yijiesuan"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_yishixiao"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_19"
                        android:src="@drawable/renyuanzhuangtai_shixiao" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="@string/yishixiao"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mine_linea2"
            android:layout_width="@dimen/dp_345"
            android:layout_height="@dimen/dp_105"
            android:layout_below="@id/mine_linea"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_10_fff"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_23"
                android:layout_marginTop="@dimen/dp_11"
                android:includeFontPadding="false"
                android:text="@string/center_fxs"
                android:textColor="#999999"
                android:textSize="@dimen/sp_13" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_9"
                android:background="#eeeeee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/mine_income_form"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_19"
                        android:src="@drawable/baobiao" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="@string/income_form"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_fans_order"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_20"
                        android:src="@drawable/dingdan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="@string/fans_order"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_group_fans"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_19"
                        android:src="@drawable/tuandui_tianchong" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="@string/group_fans"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/mine_up_yys"
            android:layout_width="@dimen/dp_345"
            android:layout_height="@dimen/dp_63"
            android:layout_below="@id/mine_linea2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/ghfghgf" />

        <LinearLayout
            android:layout_width="@dimen/dp_345"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_up_yys"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_19"
            android:background="@drawable/bg_10_fff"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_23"
                android:layout_marginTop="@dimen/dp_11"
                android:includeFontPadding="false"
                android:text="我的工具"
                android:textColor="#999999"
                android:textSize="@dimen/sp_13" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#eeeeee" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mine_rec"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_20"
                android:nestedScrollingEnabled="false">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>