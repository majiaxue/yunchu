<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_119"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/my_plan_goods_img"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
       />

    <TextView
        android:id="@+id/my_plan_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学生适用清爽护肤纯露保湿水\n俩件套"
        android:textColor="#222222"
        android:textSize="@dimen/sp_14"
        android:layout_toRightOf="@id/my_plan_goods_img"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_6"
        />
    <TextView
        android:id="@+id/my_plan_goods_fanli_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返利:"
        android:textColor="#333333"
        android:textSize="@dimen/sp_12"
        android:layout_below="@id/my_plan_goods_name"
        android:layout_toRightOf="@id/my_plan_goods_img"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_6"
        />
    <TextView
        android:id="@+id/my_plan_goods_fanli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/6"
        android:textColor="#999999"
        android:textSize="@dimen/sp_12"
        android:layout_below="@id/my_plan_goods_name"
        android:layout_toRightOf="@id/my_plan_goods_fanli_text"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_6"
        />
    <TextView
        android:id="@+id/my_plan_goods_gongji_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="共计:"
        android:textColor="#222222"
        android:textSize="@dimen/sp_12"
        android:layout_below="@id/my_plan_goods_name"
        android:layout_toRightOf="@id/my_plan_goods_fanli"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/my_plan_goods_gongji_jifen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10积分"
        android:textColor="#999999"
        android:textSize="@dimen/sp_12"
        android:layout_below="@id/my_plan_goods_name"
        android:layout_toRightOf="@id/my_plan_goods_gongji_text"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_6"
        />
    <TextView
        android:id="@+id/my_plan_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥163.00"
        android:textColor="#222222"
        android:textSize="@dimen/sp_12"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_6"
        />
    <TextView
        android:id="@+id/my_plan_goods_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="购买时间:"
        android:textColor="#999999"
        android:textSize="@dimen/sp_10"
        android:layout_alignParentBottom="true"

        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        />
    <TextView
        android:id="@+id/my_plan_goods_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020-1-2"
        android:textColor="#999999"
        android:textSize="@dimen/sp_10"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_toRightOf="@id/my_plan_goods_time_text"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_15"
        />
 <View
     android:layout_width="match_parent"
     android:layout_height="@dimen/dp_5"
     android:background="#f5f5f5"
     android:layout_alignParentBottom="true"
     />
</RelativeLayout>