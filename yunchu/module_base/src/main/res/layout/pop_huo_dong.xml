<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dp_272"
        android:layout_height="@dimen/dp_333"
        android:background="@drawable/bg_guizetanchuang"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_32"
            android:includeFontPadding="false"
            android:text="活动规则"
            android:textColor="#fc3c15"
            android:textSize="@dimen/sp_24" />

        <TextView
            android:layout_width="@dimen/dp_61"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_27"
            android:background="@drawable/button_1"
            android:gravity="center"
            android:text="活动时间:"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_13"
            android:text="2019年4月21日-11月13日"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="@dimen/dp_61"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/button_1"
            android:gravity="center"
            android:text="活动玩法:"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_13"
            android:text="1、首次进入页面有一次免费翻牌机会"
            android:textColor="#333333"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_8"
            android:text="2、翻动手机屏幕朝下，即可获得奖励"
            android:textColor="#333333"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_8"
            android:text="3、最高可翻出满199元减100元优惠券"
            android:textColor="#333333"
            android:textSize="@dimen/sp_13" />

    </LinearLayout>

    <ImageView
        android:id="@+id/pop_huo_dong_image"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_30"
        android:src="@drawable/icon_guanbi" />

</LinearLayout>