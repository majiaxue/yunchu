<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_206"
        android:layout_below="@id/pop_share_all"
        android:layout_marginTop="-40dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_70"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/pop_share_weixin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_42"
                    android:src="@drawable/umeng_socialize_wechat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pop_share_pengyouquan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_42"
                    android:src="@drawable/umeng_socialize_wxcircle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="朋友圈"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pop_share_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_42"
                    android:src="@drawable/umeng_socialize_qq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQ"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pop_share_qzone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_42"
                    android:src="@drawable/umeng_socialize_qzone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQ空间"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/dp_20"
            android:background="#dedede" />

        <TextView
            android:id="@+id/pop_share_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#666666"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pop_share_all"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_350"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_corner_radius10"
        android:elevation="@dimen/dp_10"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/pop_share_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_230"
            android:scaleType="centerCrop"
            app:roundedCornerRadius="@dimen/dp_10"
            app:roundTopLeft="true"
            app:roundTopRight="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_9"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pop_share_name"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="这个宝贝不错，夏季爽肤护肤品放..."
                    android:textColor="#222222"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/pop_share_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:text="￥159-169"
                    android:textColor="#fc5b17"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="1px"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/pop_share_qr"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_58"
                android:scaleType="centerCrop" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_marginRight="@dimen/dp_9"
            android:background="#dedede" />

        <LinearLayout
            android:id="@+id/pop_share_download"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:src="@drawable/xiazai" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="保存图片"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>