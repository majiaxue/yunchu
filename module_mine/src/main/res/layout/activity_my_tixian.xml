<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/page_top"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">
        <LinearLayout
            android:id="@+id/tixian_money_lin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现金额"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/tixian_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:background="@null"
                android:gravity="right"
                android:maxWidth="@dimen/dp_6"
                android:maxLength="6"
                android:lines="1"
                android:inputType="number"
                android:digits="0123456789"
                android:hint="请输入提现金额"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#f3f3f3" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">
        <RelativeLayout
            android:id="@+id/tixian_money_dao_lin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现至"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />
            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:background="@drawable/icon_zhifubao"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginRight="@dimen/dp_63"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:textColor="#333333"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#f3f3f3" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">
        <LinearLayout
            android:id="@+id/tixian_money_name_lin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/tixian_money_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入您的真实姓名"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#f3f3f3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">
        <LinearLayout
            android:id="@+id/tixian_money_zh_lin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝账号"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />
            <EditText
                android:id="@+id/tixian_money_zh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入您的支付宝账号"
                android:layout_marginLeft="@dimen/dp_30"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#f3f3f3" />
    </LinearLayout>
    <TextView
        android:id="@+id/tixian_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注：1积分=1元,提现最低10的倍数,需扣除3%的手续费"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="#fc3c15"
        android:textSize="11sp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/setting_logout"
        android:layout_width="@dimen/dp_347"
        android:layout_height="@dimen/dp_45"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_29"
        android:background="@drawable/bg_btn_tixian"
        android:layout_marginTop="@dimen/dp_300"
        android:gravity="center"
        android:text="确认提现"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_18" />

</LinearLayout>