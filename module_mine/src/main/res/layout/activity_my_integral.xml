<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_wodejifen"
    android:orientation="vertical"

    tools:ignore="MissingDefaultResource">

    <include layout="@layout/include_status" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">

        <ImageView
            android:id="@+id/my_integral_back"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_38"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            android:src="@drawable/icon_fanhui_bai" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的积分"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_18" />

        <TextView

            android:id="@+id/my_integral_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_10"
            android:text="提现"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>


    <TextView
        android:id="@+id/my_integral_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_40"
        android:includeFontPadding="false"
        android:text="0"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:text="当前可用积分"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_12" />

    <android.support.design.widget.TabLayout
        android:id="@+id/my_integral_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_110"
        app:tabBackground="@color/colorTransparency"
        app:tabIndicatorColor="#fd3c15"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorGravity="bottom"
        app:tabIndicatorHeight="@dimen/dp_4"
        app:tabMode="fixed"
        app:tabPaddingEnd="@dimen/dp_15"
        app:tabPaddingStart="@dimen/dp_15"
        app:tabRippleColor="@color/colorTransparency"
        app:tabSelectedTextColor="#fc3c15"
        app:tabTextColor="#333333" />

    <android.support.v4.view.ViewPager
        android:id="@+id/points_mx_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />




</LinearLayout>
