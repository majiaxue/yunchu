<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:id="@+id/vip_item_rel"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/dengjivip"
    android:layout_height="@dimen/dp_163">
    <TextView
        android:id="@+id/vip_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/dp_2"
        android:layout_centerHorizontal="true"
        android:text="普通"
        android:textColor="#aa2721"
        android:textSize="@dimen/sp_18" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_52"
        android:text="特\n权"
        android:textColor="#676767"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/vip_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_110"
        android:layout_marginTop="@dimen/dp_62"
        android:text="购买返佣商品返利时间为12个月"
        android:textColor="#676767"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/vip_kaitong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/kaitonganniu"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textColor="#aa2721"
        android:gravity="center"
        android:text="立即开通"
        android:textSize="@dimen/sp_14" />

</RelativeLayout>