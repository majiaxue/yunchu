<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_346"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/dp_346"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/bg_10_fff"
        android:paddingBottom="@dimen/dp_30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_21"
            android:layout_marginTop="@dimen/dp_28"
            android:includeFontPadding="false"
            android:text="@string/quanyishuoming"
            android:textColor="#e20707"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/rv_upgrade_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_21"
            android:layout_marginTop="@dimen/dp_52"
            android:includeFontPadding="false"
            android:text="查看权益说明"
            android:textColor="#3F51B5"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_21"
            android:layout_marginTop="@dimen/dp_82"
            android:includeFontPadding="false"
            android:text="升级条件："
            android:textColor="#e20707"
            android:textSize="@dimen/sp_15" />

        <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/rv_upgrade_rv"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="@dimen/dp_21"-->
        <!--android:layout_marginTop="@dimen/dp_104" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_104"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rv_upgrade_factor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_1"
                    android:src="@drawable/ghf" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:text="条件一："
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/rv_upgrade_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <View
                android:id="@+id/rv_upgrade_view"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_30" />

            <LinearLayout
                android:id="@+id/rv_upgrade_factor2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rv_upgrade_factor1"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:src="@drawable/ghf" />

                <TextView
                    android:id="@+id/rv_upgrade_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:text="条件二："
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/rv_upgrade_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100元"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/rv_upgrade_topay"
                    android:layout_width="@dimen/dp_55"
                    android:layout_height="@dimen/dp_25"
                    android:background="@drawable/bg_5_fb4619"
                    android:gravity="center"
                    android:text="支付"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/rv_upgrade_btn"
            android:layout_width="@dimen/dp_79"
            android:layout_height="@dimen/dp_31"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_28"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/bg_btn_upgrade"
            android:gravity="center"
            android:text="@string/upgrade_just"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <TextView
        android:id="@+id/rv_upgrade_title"
        android:layout_width="@dimen/dp_304"
        android:layout_height="@dimen/dp_40"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_upgrade_title"
        android:gravity="center"
        android:text="铜牌"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_17" />
</RelativeLayout>