<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_8"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/dp_309"
        android:layout_height="@dimen/dp_310"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_233"
        android:background="@drawable/bg_login_bottom">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_40"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/no_register"
                android:textColor="#222222"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/login_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/register_juston"
                android:textColor="#ff4a34"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_295"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_5"
           android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/register_check"
                android:layout_width="@dimen/dp_23"
                android:layout_height="@dimen/dp_23"
                android:padding="@dimen/dp_5"
                android:src="@drawable/icon_yiyuedu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:includeFontPadding="false"
                android:text="@string/read_and_accept"
                android:textColor="#666666"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/register_user_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="《服务协议》"
                android:textColor="#fb4119"
                android:textSize="@dimen/sp_13" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="和"
                android:textColor="#666666"
                android:textSize="@dimen/sp_13" />
            <TextView
                android:id="@+id/register_user_yingsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="《隐私政策》"
                android:textColor="#fb4119"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_141"
        app:cardCornerRadius="@dimen/dp_16">

        <LinearLayout
            android:layout_width="@dimen/dp_353"
            android:layout_height="@dimen/dp_333"
            android:background="@drawable/bg_login"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_25"
                android:includeFontPadding="false"
                android:text="@string/login_title"
                android:textColor="#ff4a34"
                android:textSize="@dimen/sp_28" />

            <RelativeLayout
                android:layout_width="@dimen/dp_293"
                android:layout_height="@dimen/dp_52"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_34">

                <EditText
                    android:id="@+id/login_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_login_edit"
                    android:hint="@string/input_phone"
                    android:inputType="number"
                    android:paddingLeft="@dimen/dp_51"
                    android:textColor="#333333"
                    android:textColorHint="#94666666"
                    android:textCursorDrawable="@drawable/edit_cursor"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_19"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:src="@drawable/icon_denglu" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/dp_293"
                android:layout_height="@dimen/dp_52"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_13">

                <EditText
                    android:id="@+id/login_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_login_edit"
                    android:hint="@string/input_password"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/dp_51"
                    android:textColor="#333333"
                    android:textColorHint="#94666666"
                    android:textCursorDrawable="@drawable/edit_cursor"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_18"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:src="@drawable/icon_mima" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_27"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/login_forget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="@string/forget_password"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="@dimen/dp_0_5"
                    android:layout_height="@dimen/dp_10"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="#999999" />

                <TextView
                    android:id="@+id/login_confirmLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="@string/confirm_login"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/login_btn_login"
                android:layout_width="@dimen/dp_302"
                android:layout_height="@dimen/dp_44"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_23"
                android:background="@drawable/bg_btn_login"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/login_title"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/login_weixin"
        android:layout_width="@dimen/dp_43"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_56"
        android:src="@drawable/icon_weixin" />
</RelativeLayout>